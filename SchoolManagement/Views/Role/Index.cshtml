
@{
    ViewBag.Title = "Index";
}
<div class="slim-mainpanel">
    <div class="container">
        <div class="slim-pageheader">
            <ol class="breadcrumb slim-breadcrumb">
                <li class="breadcrumb-item">@Html.ActionLink("Home", "#", "#", new { id = "1" }, null)</li>
                <li class="breadcrumb-item">@Html.ActionLink("Products", "#", "#", new { id = "2" }, null) </li>
                <li class="breadcrumb-item">@Html.ActionLink("Companyt", "#", "#", new { id = "3" }, null)</li>
                <li class="breadcrumb-item">@Html.ActionLink("Blog", "#", "#", new { id = "4" }, null) </li>
            </ol>
            <h6 class="slim-pagetitle">Add Account</h6>
        </div><!-- slim-pageheader -->
    </div>
    <div class="section-wrapper">
        <label class="section-title">Top Label Layout</label>
        <p class="mg-b-20 mg-sm-b-40">A form with a label on top of each form control.</p>

        <div class="form-layout">
            <div class="row mg-b-25">
                <div class="col-lg-8">
                    <div class="form-group">
                        <label class="form-control-label">Name: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" name="name" placeholder="Name">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-8">
                    <div class="form-group">
                        <label class="form-control-label">Address: <span class="tx-danger">*</span></label>
                        <textarea rows="2" class="form-control" placeholder="Description"></textarea>
                    </div>
                </div><!-- col-4 -->
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="ckbox">
                            <input type="checkbox"><span>Xác Nhận Thông Tin</span>
                        </label>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary pd-x-20">Submit</button>
                    </div><!-- col-4 -->
                </div>
            </div><!-- row -->

</div>
